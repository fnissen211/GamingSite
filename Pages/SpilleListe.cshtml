@page
@using GamingSiteProject.data
@using GamingSiteProject.services
@using GamingSiteProject.Pages
@using System.Threading
@model GamingSiteProject.SpilleListe.SpilleListeModel
@{
    ViewData["Title"] = "Gamelist";
    Layout = "Shared/_LayoutUser";
    var antal = 1;
}
<body>
    <div class="container">
        <div class="figure-img">
            <img />
        </div>
        <nav class="profile-navbar-bg navbar navbar-expand-sm navbar-bg box-shadow rounded mb-3">
            <a class="navbar-brand" href="/Profile">@Model.loggedinuser.Navn</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Profile">Posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/SpilleListe">My Lists</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Followers">Followers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Following">Following</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="container" align="center">
        <header class="h4">@Model.loggedinuser.Navn's Gamelist</header>
        <p>
            <a asp-page="/OpretSpilleListe">Create New</a>
        </p>

        <table class="table text-center">
            <thead>
            <tr>
                <th>
                    Number
                </th>
                <th>
                    Name of game
                </th>
            </tr>

            </thead>
            <tbody> 
                @foreach (var xx in @Model.loggedinuser.GamesList)
                {
                    <tr>
                        <td>
                            @antal
                        </td>
                        <td>
                            @xx
                        </td>
                    </tr>
                    antal++;
                }
                



            </tbody>
        </table>


    </div>
</body>