<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamingSiteProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/UserStyleSheet.css" />
</head>
<body>
    <header>
        <h1 class="pb-3" align="center">GamingSite</h1>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <div class="pb-lg-0" align="center">

                <p>
                    @Html.TextBox("BrugerID")
                </p>
                <p>
                    @Html.TextBox("Password")
                </p>
                <p>
                    <button type="button" class="btn" onclick="window.location.href = '/Login'">Login</button>
                </p>
                <p>
                    <button type="button" class="btn" onclick="window.location.href = '/OpretBruger'">Ingen Bruger?</button>
                </p>

            </div>

        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - GamingSiteProject - <a asp-area="" asp-page="/Privacy">Privacy</a>
            
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>