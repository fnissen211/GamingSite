@page
@using GamingSiteProject.data
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    
}

<body style="background-color: ivory">
    <div class="container" align="center">
        <p><img src="logo.png" alt="..." height="200" /></p>
        <h1 style="font-family: sans-serif">Login</h1>
        <div class="container" align="center">
            <div class="col-md-4">
                <form method="post">
                    <div class="form-group">
                        <label>Brugernavn</label>
                        <input type="text" asp-for="Bruger.Navn" class="form-control text-center" placeholder="Brugernavn" />
                        <span asp-validation-for="Bruger.Navn" class="text-danger" style="font-size: 15px"></span>
                    </div>
                    <div class="form-group">
                        <label>Kodeord</label>

                        <input type="password" asp-for="Bruger.Kodeord" class="form-control text-center" placeholder="Kodeord" />
                        <span asp-validation-for="Bruger.Kodeord" class="text-danger" style="font-size: 15px"></span>
                    </div>
                    @if (@Model.FejlTekst != "")
                    {
                        <p style="color: red">@Model.FejlTekst</p>
                    }
                    <div class="form-group">
                        <input type="submit" value="Login" onclick="" class="btn btn-primary" />
                    </div>
                    <button type="button" class="btn btn-primary" onclick="window.location.href = 'Brugere/OpretBruger'">Ingen Bruger?</button>
                </form>
            </div>
        </div>
    </div>

    <p>@Model.Bruger</p>




    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Navn</th>
                <th>Kodeord</th>
                <th>BrugerType</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Bruger bruger in @Model.BrugerListe.Bruger)
            {
                <tr>
                    <td>@bruger.Id</td>
                    <td>@bruger.Navn</td>
                    <td>@bruger.Kodeord</td>
                    <td>@bruger.Type</td>
                </tr>
            }
        </tbody>
    </table>
</body>
