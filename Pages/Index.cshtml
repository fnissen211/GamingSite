@page
@using GamingSiteProject.data
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body>
    <div class="container" align="center">
        <h1>Opret din bruger</h1>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div class="form-group">
                        <label>Brugernavn</label>
                        <input type="text" asp-for="Bruger.Navn" class="form-control" placeholder="Brugernavn" />
                        <span asp-validation-for="Bruger.Navn" class="text-danger" style="font-size: 15px"></span>
                    </div>
                    <div class="form-group">
                        <label>Kodeord</label>

                        <input type="text" asp-for="Bruger.Kodeord" class="form-control" placeholder="Kodeord" />
                        <span asp-validation-for="Bruger.Kodeord" class="text-danger" style="font-size: 15px"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                    <button type="button" class="m-auto" style="border-color: black" onclick="window.location.href = 'Brugere/OpretBruger'">Ingen Bruger?</button>
                </form>
            </div>
        </div>
    </div>

<p>@Model.Bruger</p>


<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Navn</th>
        <th>Kodeord</th>
        <th>BrugerType</th>
    </tr>
    </thead>
    <tbody>
        @foreach (Bruger bruger in @Model.BrugerListe.Bruger)
        {
        <tr>
            <td>@bruger.Id</td>
            <td>@bruger.Navn</td>
            <td>@bruger.Kodeord</td>
            <td>@bruger.Type</td>
        </tr>
        }
    </tbody>
</table>
</body>
